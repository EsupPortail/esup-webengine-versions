<?xml version="1.0"?>
<fragment version="1">
  <require>org.nuxeo.ecm.platform.lang</require>
  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>


    <!--  be sure no directory with that name exists -->
    <delete path="${bundle.fileName}.tmp"/>
    <mkdir path="${bundle.fileName}.tmp"/>

    <unzip from="${bundle.fileName}/" to="${bundle.fileName}.tmp">
      <include>l10n/*.properties</include>
    </unzip>

    <append from="${bundle.fileName}.tmp/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties"
      addNewLine="true"/>
      <append from="${bundle.fileName}.tmp/l10n/messages_fr.properties"
        to="nuxeo.war/WEB-INF/classes/messages.properties"
        addNewLine="true"/>

        <append from="${bundle.fileName}.tmp/l10n/messages_fr.properties"
          to="nuxeo.war/WEB-INF/classes/messages_fr.properties"
          addNewLine="true"/>

          <delete path="${bundle.fileName}.tmp"/>
        </install>
      </fragment>
